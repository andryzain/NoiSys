@using NoiSys.Areas.MasterData.ViewModels;

@{
    ViewBag.Title = "Hapus Pengguna";
    Layout = "~/Views/Shared/_TopNavbarMasterData.cshtml";
    var photoPath = "~/FotoPengguna/" + (Model.PenggunaPhotoPath ?? "pengguna.jpg");
}

@model DetailPenggunaViewModel

<div class="card card-red">
    <div class="card-header">
        <h3 class="card-title" style="color:#ffffff">@ViewBag.Title</h3>
    </div>


    <form enctype="multipart/form-data" asp-controller="User" asp-action="DeleteUser" method="post" class="form-horizontal">
        <div class="card-body">
            <h4>Yakin hapus data ini?</h4>
            <hr />
            <input hidden asp-for="PenggunaId" />
            <input hidden asp-for="PenggunaPhotoPath" />
            <input hidden asp-for="KodePengguna" />
            <input hidden asp-for="NamaLengkap" />
            <div class="post">
                <div class="user-block">
                    <img class="img-circle img-bordered-sm" src="@photoPath" asp-append-version="true" alt="user image">
                    <span class="username">
                        <a href="#">@Html.DisplayFor(model => model.NamaLengkap)</a>
                    </span>
                    <span class="description">@Html.DisplayFor(model => model.KodePengguna)</span>
                </div>
                <!-- /.user-block -->
            </div>
        </div>

        <div class="card-footer">
            @*<form asp-action="DeletePengguna" method="post">*@
            <a class="btn btn-default" asp-action="Index" asp-controller="User" asp-area="MasterData">Batal</a>
            <button type="submit" class="btn btn-danger float-left fw-bold"><div style="color:#ffffff">Hapus</div></button>
            @*</form>*@
        </div>
    </form>
</div>
