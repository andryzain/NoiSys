@{
    ViewData["Title"] = "Tambah Bank Cabang";
    Layout = "~/Views/Shared/_TopNavbarMasterData.cshtml";
}

@using NoiSys.Areas.Identity.Data;
@using Microsoft.AspNetCore.Identity;
@using NoiSys.Areas.MasterData.Models;
@using NoiSys.Areas.MasterData.ViewModels;

@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> signInManager
@model BankCabangViewModel

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12 bg-white">
            <div class="card-header bg-red">
                <h3 class="card-title fw-bold" style="color:#ffffff">@ViewBag.Title</h3>
            </div>

            <form enctype="multipart/form-data" asp-controller="BankCabang" asp-action="CreateBankCabang" method="post" class="form-horizontal">
                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" asp-for="KodeBankCabang">Kode BankCabang</label>
                        <div class="col-sm-9">
                            <input type="text" asp-for="KodeBankCabang" class="form-control form-control-border border-width-2" id="" placeholder="Kode Dokter" readonly>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="BankId" class="col-sm-3 col-form-label">Nama Bank</label>
                        <div class="col-sm-9">
                            <select class="form-control select2bs4" style="width: 100%;" asp-for="BankId" asp-items="@ViewBag.Bank">
                                <option value="" hidden disabled selected>--Pilih Bank--</option>
                            </select>
                            <span asp-validation-for="BankId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" asp-for="NamaCabang">Nama Cabang</label>
                        <div class="col-sm-9">
                            <input maxlength="100" type="text" asp-for="NamaCabang" class="form-control form-control-border border-width-2" id="" placeholder="Nama Bank Cabang">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" asp-for="NomorRekening">NomorRekening</label>
                        <div class="col-sm-9">
                            <input maxlength="100" type="text" asp-for="NomorRekening" class="form-control form-control-border border-width-2" id="" placeholder="Nomor Rekening">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" asp-for="AtasNama">Atas Nama</label>
                        <div class="col-sm-9">
                            <input maxlength="100" type="text" asp-for="AtasNama" class="form-control form-control-border border-width-2" id="" placeholder="Atas Nama">
                        </div>
                    </div>
                </div>
                <!-- start button footer -->
                <div class="card card-orange">
                    <div class="card-body">
                        <button type="submit" class="btn btn-primary bg-red float-left fw-bold"><div style="color:#ffffff">Simpan</div></button>
                        <a class="btn btn-default" asp-action="Index" asp-controller="BankCabang">Batal</a>
                    </div>
                </div>
                <!-- /.end button footer -->
                @section Scripts {
                    <script>
                        $(function () {
                            //Initialize Select2 Elements
                            $('.select2bs4').select2({
                                theme: 'bootstrap4'
                            })
                        })
                    </script>
                }
            </form>
        </div>
        @if (TempData["WarningMessage"] != null)
        {
            <script type="text/javascript">
                window.onload = function () {
                    swal("Gagal Simpan", '@TempData["WarningMessage"]', "warning");
                };
            </script>
        }
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->