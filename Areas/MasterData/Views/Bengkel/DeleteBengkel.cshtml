@using NoiSys.Areas.MasterData.ViewModels;

@{
    ViewBag.Title = "Hapus Bengkel";
    Layout = "~/Views/Shared/_TopNavbarMasterData.cshtml";
    var photoPath = "~/FotoBengkel/" + (Model.BengkelPhotoPath ?? "bengkel.jpg");
}

@model DetailBengkelViewModel

<div class="card card-red">
    <div class="card-header">
        <h3 class="card-title" style="color:#ffffff">@ViewBag.Title</h3>
    </div>


    <form enctype="multipart/form-data" asp-controller="Bengkel" asp-action="DeleteBengkel" method="post" class="form-horizontal">
        <div class="card-body">
            <h4>Yakin hapus data ini?</h4>
            <hr />
            <input hidden asp-for="BengkelId" />
            <input hidden asp-for="BengkelPhotoPath" />
            <input hidden asp-for="KodeBengkel" />
            <input hidden asp-for="NamaBengkel" />
            <div class="post">
                <div class="user-block">
                    <img class="img-circle img-bordered-sm" src="@photoPath" asp-append-version="true" alt="user image">
                    <span class="username">
                        <a href="#">@Html.DisplayFor(model => model.NamaBengkel)</a>
                    </span>
                    <span class="description">@Html.DisplayFor(model => model.KodeBengkel)</span>
                </div>
                <!-- /.user-block -->
            </div>
        </div>

        @if (TempData["WarningMessage"] != null)
        {
            <script type="text/javascript">
                window.onload = function () {
                    swal("Gagal", '@TempData["WarningMessage"]', "warning");
                };
            </script>
        }

        <div class="card-footer">
            @*<form asp-action="DeleteBengkel" method="post">*@
            <a class="btn btn-default" asp-action="Index" asp-controller="Bengkel" asp-area="MasterData">Batal</a>
            <button type="submit" class="btn btn-danger float-left fw-bold"><div style="color:#ffffff">Hapus</div></button>
            @*</form>*@
        </div>
    </form>
</div>
