@{
    ViewData["Title"] = "Tambah Produk";
    Layout = "~/Views/Shared/_TopNavbarMasterData.cshtml";
}

@using NoiSys.Areas.Identity.Data;
@using Microsoft.AspNetCore.Identity;
@using NoiSys.Areas.MasterData.Models;
@using NoiSys.Areas.MasterData.ViewModels;

@model ProdukViewModel

<!-- Tempusdominus Bootstrap 4 -->
<link rel="stylesheet" href="~/admin/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12 bg-white">
            <div class="card-header bg-red">
                <h3 class="card-title fw-bold" style="color:#ffffff">@ViewBag.Title</h3>
            </div>

            <form enctype="multipart/form-data" asp-controller="Produk" asp-action="CreateProduk" method="post" class="form-horizontal">
                <div class="card-body">
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" asp-for="KodeProduk">Kode Produk (*)</label>
                        <div class="col-sm-9">
                            <input type="text" asp-for="KodeProduk" class="form-control form-control-border border-width-2" id="" placeholder="Kode Produk" readonly>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" asp-for="NamaProduk">Nama Produk (*)</label>
                        <div class="col-sm-9">
                            <input maxlength="100" type="text" asp-for="NamaProduk" class="form-control form-control-border border-width-2" id="" placeholder="Nama Produk">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" asp-for="PrincipalId">Principal (*) 
                        </label>
                        <div class="col-sm-9">
                            <select asp-for="PrincipalId" asp-items="@ViewBag.Principal" class="form-control select2bs4" style="width: 100%;">
                                <option value="" hidden disabled selected>--Pilih Principal--</option>
                            </select>
                            <span asp-validation-for="PrincipalId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" asp-for="KategoriId">
                            Kategori (*)
                        </label>
                        <div class="col-sm-9">
                            <select asp-for="KategoriId" asp-items="@ViewBag.Kategori" class="form-control select2bs4" style="width: 100%;">
                                <option value="" hidden disabled selected>--Pilih Kategori--</option>
                            </select>
                            <span asp-validation-for="KategoriId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" asp-for="JumlahStok">Jumlah Stok (*)</label>
                        <div class="col-sm-9">
                            <input maxlength="100" type="number" asp-for="JumlahStok" class="form-control form-control-border border-width-2" id="" placeholder="Jumlah Stok" readonly>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" asp-for="SatuanId">
                            Satuan (*)
                        </label>
                        <div class="col-sm-9">
                            <select asp-for="SatuanId" asp-items="@ViewBag.Satuan" class="form-control select2bs4" style="width: 100%;">
                                <option value="" hidden disabled selected>--Pilih Satuan--</option>
                            </select>
                            <span asp-validation-for="SatuanId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" asp-for="HargaBeli">Harga Beli</label>
                        <div class="col-sm-9">
                            @*<input maxlength="100" type="number" asp-format="{0:#,###}" oninput="this.value=(parseInt(this.value)||0)" asp-for="HargaBeli" class="form-control form-control-border border-width-2" id="hargabeli" placeholder="Harga Beli" disabled>*@
                            <input type="text" asp-for="HargaBeli" class="span form-control form-control-border border-width-2" maxlength="100" placeholder="Harga Beli" id="hargabeli">
                            <span asp-validation-for="HargaBeli" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" asp-for="HargaJual">Harga Jual</label>
                        <div class="col-sm-9">
                            @*<input maxlength="100" type="number" asp-format="{0:#,###}" oninput="this.value=(parseInt(this.value)||0)" asp-for="HargaJual" class="form-control form-control-border border-width-2" id="hargajual" placeholder="Harga Jual" disabled>*@
                            <input type="text" asp-for="HargaJual" class="span form-control form-control-border border-width-2" maxlength="100" placeholder="Harga Jual" id="hargajual">
                            <span asp-validation-for="HargaJual" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" asp-for="Cogs">Cogs</label>
                        <div class="col-sm-9">
                            @*<input maxlength="100" type="number" asp-format="{0:#,###}" oninput="this.value=(parseInt(this.value)||0)" asp-for="Cogs" class="form-control form-control-border border-width-2" id="cogs" placeholder="Cogs" disabled>*@
                            <input type="text" asp-for="Cogs" class="span form-control form-control-border border-width-2" maxlength="100" placeholder="COGS" id="cogs">
                            <span asp-validation-for="Cogs" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" asp-for="DiskonId">
                            Diskon (*)
                        </label>
                        <div class="col-sm-9">
                            <select asp-for="DiskonId" asp-items="@ViewBag.Diskon" class="form-control select2bs4" style="width: 100%;">
                                <option value="" hidden disabled selected>--Pilih Diskon--</option>
                            </select>
                            <span asp-validation-for="DiskonId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label" asp-for="Catatan">Catatan</label>
                        <div class="col-sm-9">
                            <input maxlength="100" type="text" asp-for="Catatan" class="form-control form-control-border border-width-2" id="" placeholder="Catatan">
                        </div>
                    </div>
                </div>
                <!-- start button footer -->
                <div class="card card-orange">
                    <div class="card-body">
                        <button type="submit" class="btn btn-primary bg-red float-left fw-bold"><div style="color:#ffffff">Simpan</div></button>
                        <a class="btn btn-default" asp-action="Index" asp-controller="Produk">Batal</a>
                    </div>
                </div>
                <!-- /.end button footer -->
                @section Scripts {
                    <script>
                        $(function () {
                            //Initialize Select2 Elements
                            $('.select2bs4').select2({
                                theme: 'bootstrap4'
                            })

                            //Harga Beli
                            $("#hargabeli").maskMoney({
                                formatOnBlur: true,
                                reverse: true,
                                prefix: 'Rp ',
                                //selectAllOnFocus: true,
                                precision: 0
                            });
                            $('form').on('submit', function (e) {
                                var hargabeli = $("#hargabeli").maskMoney('destroy').val()
                                    .replace(/Rp\s|[.,]/g, '');
                                $("#hargabeli").val(hargabeli);
                                //e.preventDefault();
                            })

                            //Harga Jual
                            $("#hargajual").maskMoney({
                                formatOnBlur: true,
                                reverse: true,
                                prefix: 'Rp ',
                                //selectAllOnFocus: true,
                                precision: 0
                            });
                            $('form').on('submit', function (e) {
                                var hargajual = $("#hargajual").maskMoney('destroy').val()
                                    .replace(/Rp\s|[.,]/g, '');
                                $("#hargajual").val(hargajual);
                                //e.preventDefault();
                            })

                            //Cogs
                            $("#cogs").maskMoney({
                                formatOnBlur: true,
                                reverse: true,
                                prefix: 'Rp ',
                                //selectAllOnFocus: true,
                                precision: 0
                            });
                            $('form').on('submit', function (e) {
                                var cogs = $("#cogs").maskMoney('destroy').val()
                                    .replace(/Rp\s|[.,]/g, '');
                                $("#cogs").val(cogs);
                                //e.preventDefault();
                            })
                        })
                    </script>
                }
            </form>
        </div>
        @if (TempData["WarningMessage"] != null)
        {
            <script type="text/javascript">
                window.onload = function () {
                    swal("Gagal Simpan", '@TempData["WarningMessage"]', "warning");
                };
            </script>
        }
    </div>
    <!-- /.row -->
</section>
<!-- /.content -->