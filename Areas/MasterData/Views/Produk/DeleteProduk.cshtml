@using NoiSys.Areas.MasterData.ViewModels;

@{
    ViewBag.Title = "Hapus Produk";
    Layout = "~/Views/Shared/_TopNavbarMasterData.cshtml";
}

@model DetailProdukViewModel

<div class="card card-red">
    <div class="card-header">
        <h3 class="card-title" style="color:#ffffff">@ViewBag.Title</h3>
    </div>


    <form enctype="multipart/form-data" asp-controller="Produk" asp-action="DeleteProduk" method="post" class="form-horizontal">
        <div class="card-body">
            <h4>Yakin hapus data ini?</h4>
            <hr />
            <input hidden asp-for="ProdukId" />
            <input hidden asp-for="KodeProduk" />
            <input hidden asp-for="NamaProduk" />
            <div class="post">
                <div class="user-block">
                    <span class="username">
                        <a href="#">@Html.DisplayFor(model => model.NamaProduk)</a>
                    </span>
                    <span class="description">@Html.DisplayFor(model => model.KodeProduk)</span>
                </div>
                <!-- /.user-block -->
            </div>
        </div>

        <div class="card-footer">
            @*<form asp-action="DeleteProduk" method="post">*@
            <a class="btn btn-default" asp-action="Index" asp-controller="Produk" asp-area="MasterData">Batal</a>
            <button type="submit" class="btn btn-danger float-left fw-bold"><div style="color:#ffffff">Hapus</div></button>
            @*</form>*@
        </div>
    </form>
</div>
